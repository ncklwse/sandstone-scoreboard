{
    "compilerOptions": {
      "types": [
        "node"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2019",
      "lib": [
        "es2020"
      ],
      "incremental": true,
      "resolveJsonModule": true,
      "declaration": true,
      "outDir": "./dist",
      "strict": true, 
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules/*"
    ]
  }